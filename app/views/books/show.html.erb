<div class="container">                    <!-- User -->
	<div class="row">
		<div class="col-lg-3">
			<h2>Users info</h2>
            <img>
            <table class="table">
            	<tbody>
            		<tr>
            			<th>name</th>

            		</tr>
            		<tr>
            			<th>introduction</th>
            		</tr>
            	</tbody>
            </table>

				<a class="btn btn-default glyphicon glyphicon-wrench edit_user_313" href="/users/313/edit"></a>

			<h1>New Book</h1>                  <!--新規投稿-->
			<%= form_for(@bookf) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>Opinion</h4>
			<%= f.text_area :body %>
			<br>
			<%= f.submit 'Create Book' %>

			<% end %>

    	</div>

　　　　　　　　　　<!--投稿詳細-->
		<div class="col-lg-9">
			<h2>Book detail</h2>
			<table class="table">
				<thead>
					    <tr>
						    <td><%= @book.title %></td>
						    <td><%= @book.body %></td>
                            <td class="btn-sm btn-success">
                            	<%= link_to 'Edit' ,edit_book_path(@book) %>
                            </td>
                            <td class="btn-sm btn-danger">

                            	<%= link_to 'Destroy',book_path(@book),method: :delete, data: {confirm: 'Are you sure?'} %>
                            </td>

						    <th colspan="3"></th>
					    </tr>
				</thead>
			</table>
		</div>

	</div>
</div>