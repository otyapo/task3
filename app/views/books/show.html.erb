<%= render 'users/list', user: @user %>
<p class="ctreate.book"><%= flash[:notice]%></p>


　　　　　　　　　　<!--投稿詳細-->
		<div class="col-lg-9">
			<h2>Book detail</h2>
			<table class="table">
				<thead>
					    <tr>

                            <td><%= link_to user_path(@book.user), class: "user_#{@book.user}" do %>
                            <%= attachment_image_tag @book.user, :photo, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %>
                            <br>
						    <%= @book.user.name %>
						    <% end %></td>

                            <td><%= @book.title %></td>
                            <td><%= @book.body %></td>

                            <% if @book.user == current_user %>
                            <td class="btn-sm btn-success">
                            <%= link_to 'Edit' ,edit_book_path(@book), class: "edit_book_#{@book.id}"  %>
                            </td>
                            <td class="btn-sm btn-danger">

                            	<%= link_to 'Destroy',book_path(@book),method: :delete, data: {confirm: 'Are you sure?'}, class: "destroy_book_#{@book.id}" %>
                            </td>
                            <% end %>


						    <th colspan="3"></th>
					    </tr>
				</thead>
            </table>
        </div>



























