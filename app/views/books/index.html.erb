<%= render 'users/list', user: @user %>
<!--投稿一覧-->
<p class="destroy"><%= flash[:notice]%></p>

		<div class="col-lg-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<tbody>
					<th>imge</th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tbody>
					<% @books.each do |book| %>
					<tr>

						<td><%= link_to user_path(book.user), class: "user_#{book.user}" do %>
						    <%= attachment_image_tag book.user, :photo, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                             <% end %></td>

						<td><%= link_to book_path(book),class: "book_#{book.id}" do %>
						<%= book.title %>
						<% end %>
						</td>
						<td><%= book.body %></td>
						<td colspan="3"></td>
					</tr>
					<% end %>

			</table>
		</div>








