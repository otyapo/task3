<div class="contaoner">
	<div class="row">
		<div class='col-md col-md-offset-3'>
			<h1>Editing Book</h1>
			<div class="field row">
			<%= form_for(@book) do |f| %>
			    <label for="book_title">Title</label>
			    <%= f.text_field :title %>
			    <h4>Body</h4>
			    <%= f.text_area :body %>
			    <br>
			    <%= f.submit 'Update Book' %>
			<% end %>

			<%= link_to "Show", book_path(@book.id) %>
			<a>|</a>
			<%= link_to "Back", books_path %>
		</div>
	</div>
</div>
