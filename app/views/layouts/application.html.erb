<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
    <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li class="glyphicon glyphicon-home" aria-hidden="true">
              <span><%= link_to "Home", user_path(current_user) ,class: "home" %></span>
            </li>
            <li class="glyphicon glyphicon-user" aria-hidden="true">
              <span><%= link_to "Users", users_path, class: "users" %></span>
            </li>
            <li class="glyphicon glyphicon-book" aria-hidden="true">
              <span><%= link_to "Books", books_path, class: "books" %></span>
            </li>
            <li class="glyphicon glyphicon-log-out logout">
              <span><%= link_to "logout", destroy_user_session_path, method: :delete,class: "logout" %></span>
            </li>
          <% else %>
            <li class="glyphicon glyphicon-home" aria-hidden="true">
              <span><%= link_to "Home", home_index_path, class: "home" %></span>
            </li>
            <li class="glyhicon glyphicon-link" aria-hidden="true">
              <span><%= link_to "About", home_about_path, class: "about" %></span>
            </li>
            <li class="glyhicon glyphicon-edit" aria-hidden="true">
              <span><%= link_to "sign up", new_user_registration_path, class: "sign_up" %></span>
            </li>
            <li class="glyhicon glyphicon-log-in" aria-hidden="true">
              <span><%= link_to "login", new_user_session_path, class: "sign_in" %></span>
            </li>
          <% end %>

          </ul>
        </nav>
      </div>
  </header>
  <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infranttop.inc</p>
          </div>
        </div>
      </div>
  </footer>
  </body>
    <%= yield %>
</html>
