<%= render 'list', user: @user %>

<p class="update_user"><%= flash[:notice]%></p>
<!--投稿一覧-->
<div class="container">
	<div class="row">
		<div class="col-lg-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<tbody>
					<th>Image</th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tbody>
					<% @books.each do |book| %>

					<tr>
						<td><%= attachment_image_tag @user, :photo, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %></td>
						<td><%= link_to book_path(book), class: "book_#{book.id}" do %>
						<%= book.title %>
						<% end %>
						</td>
						<td><%= book.body %></td>
						<td colspan="3"></td>
					</tr>
					<% end %>
			</table>
		</div>
	</div>
</div>
