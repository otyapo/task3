<%= render 'users/list', users: @users %>

<div class="col-lg-9">
	<h2>Users</h2>
	<table class="table table-hover table-inverse">
		<tbody>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
		</tbody>
			<% @users.each do |user| %>
			<tr>
			<td><%= attachment_image_tag user, :photo, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %></td>
			<td><%= user.name %></td>
			<td><%= link_to "Show", user_path(user), class: "user_#{@user.id}" %></td>
		    </tr>
		    <% end %>
	</table>
</div>

