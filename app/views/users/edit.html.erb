<div class="body">
	<div class="container">
		<!-- flash message-->
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>

        <% if @user.errors.any? %>
            <%= @user.errors.count %>件のエラーが発生しました
            <% @user.errors.full_messages.each do |message| %>
                <%= message %>
            <% end %>
        <% end %>

		<h4>title</h4>
		<%= f.text_field :name, class: "name" %>
		<h4>Image</h4>
		<%= f.attachment_field :photo, class: "user_image" %>

		<h4>introduction</h4>
		<%= f.text_area :introduction, class: "introduction" %>
		<br>
		<%= f.submit "Update User" %>
		<% end %>
